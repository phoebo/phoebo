<h3 class="page-title">New Build request</h3>
<hr>

<div class="panel-body">
  <%= form_for :build_request, html: { multipart: true, class: "edit_project form-horizontal" }, url: build_requests_path do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :project_id, class: 'control-label' %>
        <div class="col-sm-10">
          <%= f.select :project_id, @project_select, { selected: params[:project_id] }, {style: 'width: 250px'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :branch, class: 'control-label' %>
        <div class="col-sm-10">
          <%= f.select :branch, [], {}, {style: 'width: 250px'} %>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <%= f.submit 'Build', class: 'btn btn-save' %>
    </div>
  <% end %>
</div>