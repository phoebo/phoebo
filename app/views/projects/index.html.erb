<h1>Projects</h1>

<%= link_to 'Refresh', refresh_projects_path, { class: 'btn btn-default' } %>

<% @gitlab_projects.each do |id, project| %>
	<div style="margin-top: 1em;">
		<strong>
			<% if project[:namespace] %>
				<%= project[:namespace][:name] %>
				/
			<% end %>
			<%= project[:name] %>
		</strong>

		<br><br>
		<% if @projects[project[:id]] %>
		<%= link_to 'Build', new_project_build_request_path(project[:id]), { class: 'btn btn-xs btn-danger' } %>
		<% else %>
		<%= link_to 'Enable', enable_project_path(project[:id]), { class: 'btn btn-xs btn-primary' } %>
		<% end %>
		<br><br>

		<%= project.inspect %>
	</div>
<% end %>